---
import { Twitter, Github } from "@lucide/astro";
const today = new Date();
---

<footer class="py-8 px-4 sm:px-6 border-t border-gray-100 bg-white">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <!-- Copyright -->
      <div class="text-gray-600 mb-4 md:mb-0">
        &copy; {today.getFullYear()} Abdelkader Boudih. All rights reserved.
      </div>

      <!-- Social Links -->
      <div class="flex items-center space-x-6">
        <a
          href="https://twitter.com/seuross"
          target="_blank"
          class="text-gray-500 hover:text-gray-900 transition-colors flex items-center"
          aria-label="Twitter"
        >
          <Twitter class="w-5 h-5 mr-2" />
          <span class="text-sm">Twitter</span>
        </a>
        <a
          href="https://github.com/seuros"
          target="_blank"
          class="text-gray-500 hover:text-gray-900 transition-colors flex items-center"
          aria-label="GitHub"
        >
          <Github class="w-5 h-5 mr-2" />
          <span class="text-sm">GitHub</span>
        </a>
      </div>
    </div>
  </div>
</footer>
