---
import Layout from "../layouts/Layout.astro";
import { FileQuestion, Home } from "@lucide/astro";

const title = "Page Not Found";
const description =
  "The page you're looking for doesn't exist or has been moved.";
---

<Layout title={title} description={description} maxWidth="max-w-4xl">
  <div class="py-16 px-4 sm:px-6 min-h-[70vh] flex items-center justify-center">
    <div class="text-center">
      <!-- Error code -->
      <div class="flex justify-center mb-6">
        <div class="text-9xl font-bold text-gray-200">404</div>
      </div>

      <!-- Icon -->
      <div class="flex justify-center mb-8">
        <div class="p-6 bg-gray-50 rounded-full border border-gray-100">
          <FileQuestion class="w-16 h-16 text-gray-400" />
        </div>
      </div>

      <!-- Message -->
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h1>
      <p class="text-xl text-gray-600 mb-10 max-w-lg mx-auto">
        {description}
      </p>

      <!-- Actions -->
      <div class="flex justify-center">
        <a
          href="/"
          class="inline-flex items-center justify-center px-6 py-3 bg-gray-900 text-white rounded-md text-lg font-medium hover:bg-gray-800 transition-colors"
        >
          <Home class="w-5 h-5 mr-2" />
          Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>
